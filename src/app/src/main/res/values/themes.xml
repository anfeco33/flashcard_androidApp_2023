<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColorHint">#bfc0c0</item>
        <item name="fontFamily">@font/varelaround_regular</item>
    </style>
    <style name="circle_avatar">
        <item name="cornerSize">50%</item>
    </style>
    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
    <style name="SCREEN">
        <item name="android:background">@color/purple_800</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_progress</item>
    </style>
    <style name="round_back">
        <item name="android:background">@drawable/round_back_white10_20</item>
    </style>
    <style name="settings_title">
        <item name="android:text">@string/setting_title</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="SETTING_SCREEN">
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#F5EFE6</item>
        <item name="android:colorForeground">#FEFBE7</item>
    </style>

    <style name="notificationsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#F5EFE6</item>
        <item name="android:colorForeground">#FEFBE7</item>
    </style>

    <style name="folders_title">
        <item name="android:text">@string/folders_title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="change_pass_title">
        <item name="android:text">@string/change_pass</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="public_topic_title">
        <item name="android:text">@string/public_topic_title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="folder_describe">
        <item name="android:text">@string/folder_describe</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/night_mode</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>